# wxWindows base directory
WXBASEDIR=@WXBASEDIR@

# set the OS type for compilation
OS=@OS@

# compile a library only
RULE=gslib

# define common stuff

# include gtk.inc, qt.inc or motif.inc here
include @MAKEINCLUDE@

LIB_CPP_ALL_SRC=$(LIB_CPP_SRC) @GTK_JOYSTICK@ @UNIX_THREAD@

#define library objects
LIB_OBJ=\
 $(LIB_CPP_ALL_SRC:.cpp=.o) \
 $(LIB_C_SRC:.c=.o)

all::
	-../mkdirs

clean::
	$(RM) -rf gtk
	$(RM) -rf qt
	$(RM) -rf motif
	$(RM) -rf common
	$(RM) -rf generic
	$(RM) -rf png
	$(RM) -rf zlib
	$(RM) -rf gdk_imlib
	$(RM) -rf iodbc

#additional things needed for compile
ADD_COMPILE= \
   -DHAVE_LIBPNG -DDJPEG_PROG=\"\" -DCJPEG_PROG=\"\"

# include the definitions now
include ../../template.mak
