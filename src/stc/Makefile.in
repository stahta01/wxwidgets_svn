top_srcdir = @top_srcdir@/..
top_builddir = ../../..

scintilla_dir = $(top_srcdir)/contrib/src/stc/scintilla
libsrc_dir = contrib/src/stc@PATH_IFS@$(scintilla_dir)/src

TARGET_LIBNAME=libstc

LIBVERSION_CURRENT=1
LIBVERSION_REVISION=0
