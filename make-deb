#!/bin/sh
set -e

TEMPDIR=temp-debian

echo "creating Debian source tree ..."

rm -rf ${TEMPDIR}
mkdir ${TEMPDIR}
cd ${TEMPDIR} && ../configure && make debian-dist
cd .. && rm -r ${TEMPDIR}

echo "done."
echo " "
echo "  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~"
echo "  If this is a new release version"
echo "  remember to update the changelog"
echo "  before building the package."
echo " "
echo "  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~"
echo " "

