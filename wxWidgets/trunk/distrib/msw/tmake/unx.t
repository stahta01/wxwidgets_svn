        $project{"WXMOTIF_GUIOBJS"} .= "src/motif/" . $file . " "
    }

    #! others
    
    foreach $file (sort keys %wxHTML) {
        $file =~ s/cp?p?$/\o/;
        $project{"WXHTMLOBJS"} .= "src/html/" . $file . " "
    }

