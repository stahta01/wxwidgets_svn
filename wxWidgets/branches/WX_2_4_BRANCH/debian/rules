	dh_install $(objdir_wxbase_shared)/wxbase-$(release)-config 	usr/bin
	dh_install $(objdir_wxbase_shared)/lib/{wx,*.so} 		usr/lib
	dh_link usr/share/man/man1/wx-xy-config.1.gz		\
		usr/share/man/man1/wxbase-$(release)-config.1.gz

