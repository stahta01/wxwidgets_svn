		&& $(python_ver) ./setup.py install 				    \
			      --prefix=`pwd`/../debian/$(package_gtk_dbg_py)/usr    \
			      WX_CONFIG='$(wxconfig-dbg)'

	# Why do we need this here?
	rm debian/$(package_gtk_py_lib)/$(wxpydir).pth

