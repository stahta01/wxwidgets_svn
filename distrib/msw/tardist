#$TAR cf $2/wxWindows-${WXVER}-ogl.tar wxWindows-${WXVER}/*
#rm -f -r wxWindows-${WXVER}
#gzip $2/wxWindows-${WXVER}-ogl.tar

### JPEG
#cd $1
#cat $1/distrib/msw/jpeg.rsp > /tmp/jpeg_in.txt
